<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence
                                http://java.sun.com/xml/ns/persistence/persistence_2_1.xsd">

    <persistence-unit name="school_journal" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        <class>by.itacademy.javaenterprise.lepnikau.entity.Mark</class>
        <class>by.itacademy.javaenterprise.lepnikau.entity.Student</class>
        <class>by.itacademy.javaenterprise.lepnikau.entity.Parent</class>
        <class>by.itacademy.javaenterprise.lepnikau.entity.SchoolClass</class>
        <class>by.itacademy.javaenterprise.lepnikau.entity.Subject</class>
        <class>by.itacademy.javaenterprise.lepnikau.entity.Teacher</class>

        <properties>
            <property name="hibernate.dialect"
                      value="org.hibernate.dialect.MySQLDialect"/>
            <property name="hibernate.connection.url"
                      value="jdbc:mysql://localhost:3306/school_journal?useUnicode=true&amp;characterEncoding=UTF-8"/>
            <property name="hibernate.connection.driver_class"
                      value="com.mysql.cj.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="admin"/>
            <property name="hibernate.connection.password" value="adminPass"/>
            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.format_sql" value="true"/>
        </properties>
    </persistence-unit>
</persistence>